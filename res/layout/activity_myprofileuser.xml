<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF" >

    <TextView
        android:id="@+id/tv_infotitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:text="Info"
        android:textColor="#2AC3E8"
        android:textSize="20sp" >
    </TextView>

    <LinearLayout
        android:id="@+id/ll_myprofile"
        android:layout_width="250dip"
        android:layout_height="250dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dip"
        android:background="@drawable/bkg_grey_stroke"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Email: "
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_elespace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Element Spaces: "
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_designspace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Designer_Spaces: "
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_createtime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Createtime: "
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_firstpage"
        android:layout_width="250dip"
        android:layout_height="180dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dip"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bkg_grey_stroke"
            android:gravity="center"
            android:text="Register "
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_forogotpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-1dp"
            android:layout_weight="1"
            android:background="@drawable/bkg_grey_stroke"
            android:gravity="center"
            android:text="Forgot Password"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-1dp"
            android:layout_weight="1"
            android:background="@drawable/bkg_grey_stroke"
            android:gravity="center"
            android:text="Login"
            android:textColor="#000" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/bkg_grey_stroke"
        android:onClick="logout"
        android:text="Logout"
        android:visibility="gone" />

</RelativeLayout>