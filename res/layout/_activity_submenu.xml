<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dip"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:clickable="true"
                android:gravity="center|bottom"
                android:onClick="btnmain_upload"
                android:src="@drawable/bkg_submenu" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:src="@drawable/bkg_subtools" />

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_gravity="center" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="btnmycards" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="btnmain_upload" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="btnmake" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="btnmyinfo" />
            </LinearLayout>
        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:src="@drawable/bkg_bottom_logo" />
    </LinearLayout>

</RelativeLayout>